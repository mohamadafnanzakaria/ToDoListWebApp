@page
@model ToDoListWebApp.Pages.ListModel

<a class="btn btn-primary" href="New">Create Task</a>

<h1>ToDo List</h1>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Task</th>
            <th>Date</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        @if(Model.ToDos != null ){

            @foreach (var todo in Model.ToDos)
            {
                <tr>
                    <td>@todo.Id</td>
                    <td>@todo.Task</td>
                    <td>@todo.DateAdded.ToShortDateString()</td>
                    <td>@todo.Status</td>
                </tr>
            }
        }else
            {
                <p>No tasks yet created</p>
            }
            </tbody>
</table>